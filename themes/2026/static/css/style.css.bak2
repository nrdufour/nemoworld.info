/*
 * Nemoworld 2026 Theme
 * Minimal, clean CSS with dark and light themes
 */

/* Dark Theme (default) */
:root {
  --bg-primary: #0a1929;
  --bg-secondary: #132f4c;
  --bg-tertiary: #1e3a5f;
  --text-primary: #e3f2fd;
  --text-secondary: #b0bec5;
  --accent-primary: #64b5f6;
  --accent-secondary: #42a5f5;
  --accent-tertiary: #90caf9;
  --border: #1e3a5f;
  --code-bg: #132f4c;
  --code-text: #90caf9;
  --syntax-keyword: #90caf9;
  --syntax-string: #a5d6a7;
  --syntax-number: #ffab91;
  --syntax-comment: #b0bec5;
  --syntax-function: #81d4fa;
  --syntax-error: #ff6b6b;
}

/* Light Theme */
:root[data-theme="light"] {
  --bg-primary: #f5f7fa;
  --bg-secondary: #ffffff;
  --bg-tertiary: #e1e8ed;
  --text-primary: #1a2332;
  --text-secondary: #4a5568;
  --accent-primary: #2563eb;
  --accent-secondary: #1d4ed8;
  --accent-tertiary: #3b82f6;
  --border: #cbd5e0;
  --code-bg: #f1f5f9;
  --code-text: #1e40af;
  --syntax-keyword: #2563eb;
  --syntax-string: #059669;
  --syntax-number: #dc2626;
  --syntax-comment: #6b7280;
  --syntax-function: #0891b2;
  --syntax-error: #dc2626;
}

/* Auto theme based on system preference */
@media (prefers-color-scheme: light) {
  :root:not([data-theme]) {
    --bg-primary: #f5f7fa;
    --bg-secondary: #ffffff;
    --bg-tertiary: #e1e8ed;
    --text-primary: #1a2332;
    --text-secondary: #4a5568;
    --accent-primary: #2563eb;
    --accent-secondary: #1d4ed8;
    --accent-tertiary: #3b82f6;
    --border: #cbd5e0;
    --code-bg: #f1f5f9;
    --code-text: #1e40af;
    --syntax-keyword: #2563eb;
    --syntax-string: #059669;
    --syntax-number: #dc2626;
    --syntax-comment: #6b7280;
    --syntax-function: #0891b2;
    --syntax-error: #dc2626;
  }
}

/* Font Definitions */
@font-face {
  font-family: 'Inter';
  src: url('/fonts/inter.woff2') format('woff2');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Inter';
  src: url('/fonts/inter-bold.woff2') format('woff2');
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Fantasque Sans Mono';
  src: url('/fonts/fantasque-sans-mono.woff2') format('woff2');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

/* CSS Reset & Base Styles */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  position: relative;
  min-height: 100%;
  font-size: clamp(16px, 1.5vw + 14px, 18px);
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  line-height: 1.7;
  background-color: var(--bg-primary);
  color: var(--text-primary);
  margin: 0 auto;
  padding: 1rem;
  max-width: 960px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transition: background-color 0.3s ease, color 0.3s ease;
}

/* Skip to content link for accessibility */
.skip-link {
  position: absolute;
  top: -100px;
  left: 0;
  background-color: #64b5f6;
  color: #0a1929;
  padding: 0.75em 1.5em;
  text-decoration: none;
  font-weight: bold;
  z-index: 10000;
  border-radius: 0 0 4px 0;
  background-image: none;
  opacity: 0;
  pointer-events: none;
}

.skip-link:focus {
  top: 0;
  opacity: 1;
  pointer-events: auto;
  outline: 3px solid #90caf9;
  outline-offset: 2px;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  font-family: 'Fantasque Sans Mono', 'JetBrains Mono', "SF Mono", Monaco, Consolas, monospace;
  color: #e3f2fd;
  margin-top: 1.5em;
  margin-bottom: 0.5em;
  line-height: 1.3;
  font-weight: 700;
  position: relative;
}

h1 {
  font-size: 1.6rem;
}

h1::before {
  content: "# ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

h2 {
  font-size: 1.4rem;
}

h2::before {
  content: "## ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

h3 {
  font-size: 1.25rem;
}

h3::before {
  content: "### ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

h4 {
  font-size: 1.1rem;
}

h4::before {
  content: "#### ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

h5 {
  font-size: 1rem;
}

h5::before {
  content: "##### ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

h6 {
  font-size: 0.95rem;
}

h6::before {
  content: "###### ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

p {
  margin-bottom: 1em;
}

.mono {
  font-family: 'Fantasque Sans Mono', 'JetBrains Mono', "SF Mono", Monaco, Consolas, monospace;
  font-size: 0.95em;
}

/* Links */
a {
  color: #64b5f6;
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: all 0.2s ease;
  background-image: linear-gradient(to bottom, rgba(100, 181, 246, 0.3) 0%, rgba(100, 181, 246, 0.3) 100%);
  background-repeat: repeat-x;
  background-position: 0 100%;
  background-size: 100% 1px;
}

a:hover {
  color: #e3f2fd;
  background-color: #64b5f6;
  background-image: none;
  border-color: transparent;
}

a:focus {
  outline: 3px solid #90caf9;
  outline-offset: 2px;
  background-color: #1e3a5f;
  border-radius: 2px;
}

a:visited {
  color: #b0bec5;
  background-image: linear-gradient(to bottom, rgba(176, 190, 197, 0.3) 0%, rgba(176, 190, 197, 0.3) 100%);
  background-repeat: repeat-x;
  background-position: 0 100%;
  background-size: 100% 1px;
}

a:visited:hover {
  color: #e3f2fd;
  background-color: #132f4c;
  background-image: none;
}

h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {
  color: #64b5f6;
  background-image: linear-gradient(to bottom, rgba(100, 181, 246, 0.4) 0%, rgba(100, 181, 246, 0.4) 100%);
}

h1 a:hover, h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover {
  background-color: #64b5f6;
  background-image: none;
  color: #e3f2fd;
}

/* Code */
code {
  font-family: 'Fantasque Sans Mono', 'JetBrains Mono', "SF Mono", Monaco, Consolas, monospace;
  font-size: 0.9em;
  color: #90caf9;
  background-color: #132f4c;
  padding: 0.2em 0.4em;
  border-radius: 3px;
}

pre {
  background-color: #132f4c;
  padding: 1em;
  overflow-x: auto;
  border-radius: 5px;
  margin-bottom: 1em;
}

pre code {
  color: #64b5f6;
  background-color: transparent;
  padding: 0;
  border-radius: 0;
}

/* Syntax Highlighting (Chroma) - Blue Theme */
.chroma { color: #e3f2fd; background-color: #132f4c; }
.chroma .err { color: #ff6b6b; } /* Error */
.chroma .lntd { vertical-align: top; padding: 0; margin: 0; border: 0; }
.chroma .lntable { border-spacing: 0; padding: 0; margin: 0; border: 0; width: auto; overflow: auto; display: block; }
.chroma .hl { display: block; width: 100%; background-color: #1e3a5f; }
.chroma .lnt { margin-right: 0.4em; padding: 0 0.4em 0 0.4em; color: #b0bec5; }
.chroma .ln { margin-right: 0.4em; padding: 0 0.4em 0 0.4em; color: #b0bec5; }
.chroma .k { color: #90caf9; font-weight: bold; } /* Keyword */
.chroma .kc { color: #90caf9; font-weight: bold; } /* KeywordConstant */
.chroma .kd { color: #90caf9; font-weight: bold; } /* KeywordDeclaration */
.chroma .kn { color: #90caf9; font-weight: bold; } /* KeywordNamespace */
.chroma .kp { color: #90caf9; } /* KeywordPseudo */
.chroma .kr { color: #90caf9; font-weight: bold; } /* KeywordReserved */
.chroma .kt { color: #64b5f6; } /* KeywordType */
.chroma .n { color: #e3f2fd; } /* Name */
.chroma .na { color: #81d4fa; } /* NameAttribute */
.chroma .nb { color: #64b5f6; } /* NameBuiltin */
.chroma .bp { color: #64b5f6; } /* NameBuiltinPseudo */
.chroma .nc { color: #81d4fa; font-weight: bold; } /* NameClass */
.chroma .no { color: #ffab91; } /* NameConstant */
.chroma .nd { color: #81d4fa; } /* NameDecorator */
.chroma .ni { color: #e3f2fd; } /* NameEntity */
.chroma .ne { color: #ff6b6b; font-weight: bold; } /* NameException */
.chroma .nf { color: #81d4fa; } /* NameFunction */
.chroma .nl { color: #e3f2fd; } /* NameLabel */
.chroma .nn { color: #64b5f6; } /* NameNamespace */
.chroma .nx { color: #81d4fa; } /* NameOther */
.chroma .py { color: #e3f2fd; } /* NameProperty */
.chroma .nt { color: #90caf9; } /* NameTag */
.chroma .nv { color: #e3f2fd; } /* NameVariable */
.chroma .vc { color: #e3f2fd; } /* NameVariableClass */
.chroma .vg { color: #e3f2fd; } /* NameVariableGlobal */
.chroma .vi { color: #e3f2fd; } /* NameVariableInstance */
.chroma .vm { color: #e3f2fd; } /* NameVariableInstance */
.chroma .l { color: #a5d6a7; } /* Literal */
.chroma .ld { color: #a5d6a7; } /* LiteralDate */
.chroma .s { color: #a5d6a7; } /* LiteralString */
.chroma .sa { color: #a5d6a7; } /* LiteralStringAffix */
.chroma .sb { color: #a5d6a7; } /* LiteralStringBacktick */
.chroma .sc { color: #a5d6a7; } /* LiteralStringChar */
.chroma .dl { color: #a5d6a7; } /* LiteralStringDelimiter */
.chroma .sd { color: #b0bec5; font-style: italic; } /* LiteralStringDoc */
.chroma .s2 { color: #a5d6a7; } /* LiteralStringDouble */
.chroma .se { color: #ffcc80; } /* LiteralStringEscape */
.chroma .sh { color: #a5d6a7; } /* LiteralStringHeredoc */
.chroma .si { color: #ffcc80; } /* LiteralStringInterpol */
.chroma .sx { color: #a5d6a7; } /* LiteralStringOther */
.chroma .sr { color: #ffcc80; } /* LiteralStringRegex */
.chroma .s1 { color: #a5d6a7; } /* LiteralStringSingle */
.chroma .ss { color: #a5d6a7; } /* LiteralStringSymbol */
.chroma .m { color: #ffab91; } /* LiteralNumber */
.chroma .mb { color: #ffab91; } /* LiteralNumberBin */
.chroma .mf { color: #ffab91; } /* LiteralNumberFloat */
.chroma .mh { color: #ffab91; } /* LiteralNumberHex */
.chroma .mi { color: #ffab91; } /* LiteralNumberInteger */
.chroma .il { color: #ffab91; } /* LiteralNumberIntegerLong */
.chroma .mo { color: #ffab91; } /* LiteralNumberOct */
.chroma .o { color: #90caf9; } /* Operator */
.chroma .ow { color: #90caf9; font-weight: bold; } /* OperatorWord */
.chroma .c { color: #b0bec5; font-style: italic; } /* Comment */
.chroma .ch { color: #b0bec5; font-style: italic; } /* CommentHashbang */
.chroma .cm { color: #b0bec5; font-style: italic; } /* CommentMultiline */
.chroma .c1 { color: #b0bec5; font-style: italic; } /* CommentSingle */
.chroma .cs { color: #b0bec5; font-style: italic; } /* CommentSpecial */
.chroma .cp { color: #90caf9; font-style: italic; } /* CommentPreproc */
.chroma .cpf { color: #b0bec5; font-style: italic; } /* CommentPreprocFile */
.chroma .g { color: #e3f2fd; } /* Generic */
.chroma .gd { color: #ff6b6b; } /* GenericDeleted */
.chroma .ge { font-style: italic; } /* GenericEmph */
.chroma .gr { color: #ff6b6b; } /* GenericError */
.chroma .gh { color: #64b5f6; font-weight: bold; } /* GenericHeading */
.chroma .gi { color: #a5d6a7; } /* GenericInserted */
.chroma .go { color: #b0bec5; } /* GenericOutput */
.chroma .gp { color: #64b5f6; font-weight: bold; } /* GenericPrompt */
.chroma .gs { font-weight: bold; } /* GenericStrong */
.chroma .gu { color: #64b5f6; font-weight: bold; } /* GenericSubheading */
.chroma .gt { color: #ff6b6b; } /* GenericTraceback */
.chroma .gl { text-decoration: underline; } /* GenericUnderline */
.chroma .w { color: #e3f2fd; } /* TextWhitespace */

/* Container */
.container {
  width: 100%;
  max-width: 960px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Navigation */
nav {
  margin-bottom: 2em;
  padding: 1.5em 0;
  border-bottom: 2px solid #1e3a5f;
}

.nav-brand {
  margin-bottom: 1em;
}

.nav-brand a {
  font-size: 1.5em;
  font-weight: 700;
  color: #64b5f6;
  border: none;
  font-variant: small-caps;
  letter-spacing: 0.05em;
}

.nav-brand a:hover {
  color: #90caf9;
  background-color: transparent;
}

.nav-links {
  font-family: 'Fantasque Sans Mono', 'JetBrains Mono', "SF Mono", Monaco, Consolas, monospace;
  color: #b0bec5;
}

.nav-links a {
  border: none;
  background-color: transparent;
  color: #64b5f6;
  transition: color 0.2s ease;
  font-size: 0.95em;
}

.nav-links a:hover,
.nav-links a.active {
  color: #e3f2fd;
  background-color: transparent;
}

/* Header */
header {
  margin-bottom: 1em;
}

.page-header {
  margin-bottom: 2em;
}

/* Home Page */
.home-content {
  display: flex;
  gap: 2em;
  align-items: flex-start;
}

.home-text {
  flex: 1;
}

.home-text h1 {
  margin-top: 0;
}

.home-image {
  flex-shrink: 0;
  width: 200px;
  text-align: center;
}

.home-image img {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 1em;
}

.home-image a {
  display: inline-block;
  padding: 0.5em 1em;
  border: 1px solid #1e3a5f;
  border-radius: 4px;
  background-color: #132f4c;
  font-size: 0.9em;
}

.home-image a:hover {
  border-color: #64b5f6;
  background-color: #1e3a5f;
}

.latest-posts {
  margin-top: 1em;
}

.post-item {
  display: flex;
  align-items: baseline;
  gap: 1em;
  padding: 0.75em 0;
  border-bottom: 1px dashed #1e3a5f;
  transition: background-color 0.2s ease;
}

.post-item:last-child {
  border-bottom: none;
}

.post-item:hover {
  background-color: #132f4c;
  padding-left: 0.5em;
  margin-left: -0.5em;
  border-radius: 4px;
}

.post-date {
  flex-shrink: 0;
  color: #64b5f6;
  font-weight: 600;
  min-width: 7.5em;
}

.post-title {
  flex: 1;
  color: #e3f2fd;
  font-weight: 500;
}

.post-title:hover {
  color: #64b5f6;
  background-color: transparent;
}

.post-header {
  padding-bottom: 1em;
  margin-bottom: 2em;
  border-bottom: 1px solid #1e3a5f;
}

.note-title {
  margin-bottom: 1.5em;
  padding: 1em 0;
}

/* Main content area */
main {
  margin-bottom: 3em;
}

.back-section {
  margin-top: 2em;
  border-top: 1px dashed #1e3a5f;
  padding-top: 1em;
}

/* Projects */
.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5em;
  margin: 2em 0;
}

.project-card {
  border: 1px solid #1e3a5f;
  border-radius: 5px;
  padding: 1.5em;
  background-color: #132f4c;
  transition: border-color 0.2s ease;
}

.project-card:hover {
  border-color: #64b5f6;
}

.project-card h3 {
  margin-top: 0;
}

.project-desc {
  color: #b0bec5;
  font-style: italic;
  margin-top: 0.5em;
}

.project-tout {
  border: 1px solid #1e3a5f;
  border-radius: 5px;
  padding: 1.5em;
  margin-bottom: 1.5em;
}

.project-type {
  display: inline-block;
  padding: 0.25em 0.75em;
  border-radius: 3px;
  background-color: #1e3a5f;
  font-size: 0.875em;
  margin-bottom: 0.5em;
}

/* Recipes */
.recipes-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 1.5em;
  margin: 2em 0;
}

.recipe-card {
  border: 1px solid #1e3a5f;
  border-radius: 5px;
  overflow: hidden;
  transition: border-color 0.2s ease;
  background-color: #132f4c;
}

.recipe-card:hover {
  border-color: #64b5f6;
}

.recipe-card a {
  border: none;
}

.recipe-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.recipe-card h3 {
  padding: 1em;
  margin: 0;
}

.recipe-content {
  display: flex;
  gap: 2em;
  margin-top: 2em;
}

.recipe-image {
  flex-shrink: 0;
  width: 300px;
}

.recipe-image img {
  width: 100%;
  border-radius: 8px;
}

.recipe-text {
  flex: 1;
}

/* Notes */
.notes-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 2em;
  margin: 2em 0;
}

.note-topic {
  border: 1px solid #1e3a5f;
  border-radius: 5px;
  padding: 1.5em;
  background-color: #132f4c;
}

.note-topic h2 {
  margin-top: 0;
  padding-left: 0;
  border-left: none;
}

.note-breadcrumb {
  color: #b0bec5;
  margin-bottom: 1em;
  font-size: 0.9em;
}

.note-meta {
  color: #b0bec5;
  font-size: 0.9em;
  margin-bottom: 2em;
}

.note-with-hero {
  display: flex;
  gap: 2em;
  margin-top: 2em;
}

.note-hero {
  flex-shrink: 0;
  width: 250px;
}

.note-hero img {
  width: 100%;
  border-radius: 8px;
}

.note-content {
  flex: 1;
}

/* Images */
img {
  max-width: 100%;
  height: auto;
  display: block;
  border-radius: 3px;
}

figure {
  margin: 1.5em 0;
}

figcaption {
  font-size: 0.875em;
  color: #b0bec5;
  margin-top: 0.5em;
  font-style: italic;
}

span.with-border img {
  border: 1px dotted #1e3a5f;
}

.drawings figure {
  background-color: #1e3a5f;
  padding: 1em;
  border-radius: 5px;
}

/* Image Gallery */
.image-gallery {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 1em;
  margin: 2em 0;
}

.image-gallery img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.image-gallery img:hover {
  transform: scale(1.05);
}

/* Native dialog for full-size images */
.image-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  max-width: 95vw;
  max-height: 95vh;
  border: none;
  background-color: transparent;
  padding: 0;
  margin: 0;
}

.image-dialog img {
  max-width: 95vw;
  max-height: 95vh;
  width: auto;
  height: auto;
  display: block;
  border-radius: 4px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
}

.image-dialog::backdrop {
  background-color: rgba(10, 25, 41, 0.95);
  backdrop-filter: blur(4px);
}

.dialog-close {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 40px;
  height: 40px;
  background-color: #132f4c;
  border: 2px solid #64b5f6;
  border-radius: 50%;
  color: #64b5f6;
  font-size: 24px;
  line-height: 1;
  cursor: pointer;
  transition: all 0.2s ease;
  font-weight: bold;
}

.dialog-close:hover {
  background-color: #64b5f6;
  color: #0a1929;
  transform: scale(1.1);
}

/* Tables */
table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 1.5em;
  color: #e3f2fd;
}

table th,
table td {
  border: 1px solid #1e3a5f;
  padding: 0.75em;
  text-align: left;
}

table th {
  background-color: #132f4c;
  font-weight: 600;
}

table tbody tr:hover {
  background-color: #132f4c;
}

/* Lists */
ul, ol {
  margin-bottom: 1em;
  margin-left: 2em;
}

li {
  margin-bottom: 0.5em;
}

/* Blockquotes */
blockquote {
  border-left: 4px solid #64b5f6;
  padding-left: 1em;
  margin: 1.5em 0;
  color: #b0bec5;
  font-style: italic;
}

/* Horizontal Rule */
hr {
  border: none;
  border-top: 1px solid #1e3a5f;
  margin: 2em 0;
}

/* Footer */
footer {
  margin-top: 3em;
  padding: 1.5em 0;
  text-align: center;
  border-top: 1px solid #1e3a5f;
  font-size: 0.875em;
  color: #b0bec5;
}

footer p {
  margin-bottom: 0;
}

/* Back to Top Button */
.back-to-top {
  position: fixed;
  bottom: 2em;
  right: 2em;
  width: 3em;
  height: 3em;
  background-color: #132f4c;
  border: 2px solid #64b5f6;
  border-radius: 50%;
  color: #64b5f6;
  font-size: 1.5em;
  line-height: 1;
  cursor: pointer;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-to-top.visible {
  opacity: 1;
  visibility: visible;
}

.back-to-top:hover {
  background-color: #64b5f6;
  color: #0a1929;
  transform: translateY(-3px);
  box-shadow: 0 4px 12px rgba(100, 181, 246, 0.3);
}

.back-to-top:focus {
  outline: 3px solid #90caf9;
  outline-offset: 3px;
}

/* Focus states for interactive elements */
button:focus,
.dialog-close:focus {
  outline: 3px solid #90caf9;
  outline-offset: 2px;
}

/* Remove default focus outline for mouse users, keep for keyboard users */
:focus:not(:focus-visible) {
  outline: none;
}

:focus-visible {
  outline: 3px solid #90caf9;
  outline-offset: 2px;
}

/* Responsive Design */
@media (max-width: 768px) {
  body {
    font-size: 16px;
    padding: 0.5rem;
  }

  h1 { font-size: 1.75rem; }
  h2 { font-size: 1.5rem; }
  h3 { font-size: 1.25rem; }

  .nav-brand a {
    font-size: 1.25em;
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5em;
    line-height: 2;
  }

  .nav-links a {
    font-size: 0.85em;
    padding: 0.5em 0.75em;
    background-color: #132f4c;
    border: 1px solid #1e3a5f;
    border-radius: 4px;
    min-height: 44px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .nav-links a:hover,
  .nav-links a.active {
    background-color: #1e3a5f;
    border-color: #64b5f6;
  }

  .back-to-top {
    bottom: 1em;
    right: 1em;
    width: 2.5em;
    height: 2.5em;
    font-size: 1.25em;
  }

  .home-content {
    flex-direction: column;
  }

  .home-image {
    width: 150px;
    margin: 0 auto;
  }

  .projects-grid,
  .recipes-grid,
  .notes-grid {
    grid-template-columns: 1fr;
  }

  .recipe-content,
  .note-with-hero {
    flex-direction: column;
  }

  .recipe-image,
  .note-hero {
    width: 100%;
  }

  .image-gallery {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 0.5em;
  }

  .container {
    padding: 0 0.5rem;
  }
}

/* Print Styles */
@media print {
  * {
    background: transparent !important;
    color: black !important;
    box-shadow: none !important;
    text-shadow: none !important;
  }

  body {
    background-color: white;
    color: black;
    font-size: 12pt;
    line-height: 1.5;
    max-width: 100%;
  }

  nav, footer, .back-to-top, .dialog-close {
    display: none !important;
  }

  a {
    color: black;
    text-decoration: underline;
    background-image: none !important;
  }

  a[href^="http"]:after {
    content: " (" attr(href) ")";
    font-size: 0.9em;
    color: #666;
  }

  h1, h2, h3, h4, h5, h6 {
    page-break-after: avoid;
    page-break-inside: avoid;
  }

  h1::before, h2::before, h3::before, h4::before, h5::before, h6::before {
    color: #666 !important;
  }

  img {
    max-width: 100% !important;
    page-break-inside: avoid;
  }

  pre, blockquote {
    border: 1px solid #999;
    page-break-inside: avoid;
    padding: 0.5em;
  }

  code {
    background-color: #f0f0f0 !important;
    border: 1px solid #ccc;
    padding: 2px 4px;
  }

  table {
    border-collapse: collapse;
    page-break-inside: avoid;
  }

  table th, table td {
    border: 1px solid #999;
  }

  .image-gallery, .drawings figure {
    display: block;
  }

  .home-content, .recipe-content, .note-with-hero {
    display: block;
  }

  .home-image, .recipe-image, .note-hero {
    width: 100%;
    margin: 1em 0;
  }

  @page {
    margin: 2cm;
  }
}
