/*
 * Nemoworld 2026 Theme
 * Minimal, clean, dark blue themed CSS
 *
 * Color Palette:
 * --bg-primary: #0a1929 (deep navy blue - main background)
 * --bg-secondary: #132f4c (darker blue - cards/boxes)
 * --bg-tertiary: #1e3a5f (medium blue - hover states)
 * --text-primary: #e3f2fd (very light blue - main text)
 * --text-secondary: #b0bec5 (muted blue-gray - secondary text)
 * --accent-primary: #64b5f6 (bright light blue - links/accents)
 * --accent-secondary: #42a5f5 (medium light blue - hover)
 * --accent-tertiary: #90caf9 (soft light blue - highlights)
 * --border: #1e3a5f (border color)
 */

/* Font Definitions */
@font-face {
  font-family: 'Inter';
  src: url('/fonts/inter.woff2') format('woff2');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Inter';
  src: url('/fonts/inter-bold.woff2') format('woff2');
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Fantasque Sans Mono';
  src: url('/fonts/fantasque-sans-mono.woff2') format('woff2');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

/* CSS Reset & Base Styles */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  position: relative;
  min-height: 100%;
  font-size: 18px;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  line-height: 1.7;
  background-color: #0a1929;
  color: #e3f2fd;
  margin: 0 auto;
  padding: 1rem;
  max-width: 960px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  font-family: 'Fantasque Sans Mono', 'JetBrains Mono', "SF Mono", Monaco, Consolas, monospace;
  color: #e3f2fd;
  margin-top: 1.5em;
  margin-bottom: 0.5em;
  line-height: 1.3;
  font-weight: 700;
  position: relative;
}

h1 {
  font-size: 1.6rem;
}

h1::before {
  content: "# ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

h2 {
  font-size: 1.4rem;
}

h2::before {
  content: "## ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

h3 {
  font-size: 1.25rem;
}

h3::before {
  content: "### ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

h4 {
  font-size: 1.1rem;
}

h4::before {
  content: "#### ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

h5 {
  font-size: 1rem;
}

h5::before {
  content: "##### ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

h6 {
  font-size: 0.95rem;
}

h6::before {
  content: "###### ";
  color: #64b5f6;
  margin-right: 0.5em;
  font-weight: 700;
}

p {
  margin-bottom: 1em;
}

.mono {
  font-family: 'Fantasque Sans Mono', 'JetBrains Mono', "SF Mono", Monaco, Consolas, monospace;
  font-size: 0.95em;
}

/* Links */
a {
  color: #83a598;
  text-decoration: none;
  border-bottom: 1px solid #83a598;
  transition: all 0.2s ease;
}

a:hover {
  color: #fbf1c7;
  background-color: #83a598;
  border-color: #83a598;
}

a:visited {
  color: #C1B7A9;
  border-color: #a89984;
}

a:visited:hover {
  color: #fdf4c1;
  background-color: #282828;
}

h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {
  color: #d79921;
  border-bottom-color: #d79921;
}

h1 a:hover, h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover {
  background-color: #d79921;
  color: #fbf1c7;
}

/* Code */
code {
  font-family: 'Fantasque Sans Mono', 'JetBrains Mono', "SF Mono", Monaco, Consolas, monospace;
  font-size: 0.9em;
  color: #98971a;
  background-color: #282828;
  padding: 0.2em 0.4em;
  border-radius: 3px;
}

pre {
  background-color: #282828;
  padding: 1em;
  overflow-x: auto;
  border-radius: 5px;
  margin-bottom: 1em;
}

pre code {
  color: #689d6a;
  background-color: transparent;
  padding: 0;
  border-radius: 0;
}

/* Container */
.container {
  width: 100%;
  max-width: 960px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Navigation */
nav {
  margin-bottom: 2em;
  padding: 1.5em 0;
  border-bottom: 2px solid #3c3836;
}

.nav-brand {
  margin-bottom: 1em;
}

.nav-brand a {
  font-size: 1.5em;
  font-weight: 700;
  color: #d79921;
  border: none;
  font-variant: small-caps;
  letter-spacing: 0.05em;
}

.nav-brand a:hover {
  color: #fabd2f;
  background-color: transparent;
}

.nav-links {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5em;
}

.nav-links a {
  padding: 0.5em 1em;
  border: 1px solid #3c3836;
  border-radius: 4px;
  background-color: #282828;
  color: #f9f5d7;
  transition: all 0.2s ease;
  font-size: 0.95em;
}

.nav-links a:hover {
  border-color: #d79921;
  background-color: #3c3836;
  color: #fabd2f;
}

/* Header */
header {
  margin-bottom: 1em;
}

.page-header {
  margin-bottom: 2em;
}

/* Home Page */
.home-content {
  display: flex;
  gap: 2em;
  align-items: flex-start;
}

.home-text {
  flex: 1;
}

.home-text h1 {
  margin-top: 0;
}

.home-image {
  flex-shrink: 0;
  width: 200px;
  text-align: center;
}

.home-image img {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 1em;
}

.home-image a {
  display: inline-block;
  padding: 0.5em 1em;
  border: 1px solid #3c3836;
  border-radius: 4px;
  background-color: #282828;
  font-size: 0.9em;
}

.home-image a:hover {
  border-color: #d79921;
  background-color: #3c3836;
}

.latest-posts {
  margin-top: 1em;
}

.post-item {
  display: flex;
  align-items: baseline;
  gap: 1em;
  padding: 0.75em 0;
  border-bottom: 1px dashed #3c3836;
  transition: background-color 0.2s ease;
}

.post-item:last-child {
  border-bottom: none;
}

.post-item:hover {
  background-color: #282828;
  padding-left: 0.5em;
  margin-left: -0.5em;
  border-radius: 4px;
}

.post-date {
  flex-shrink: 0;
  color: #d79921;
  font-weight: 600;
  min-width: 7.5em;
}

.post-title {
  flex: 1;
  color: #f9f5d7;
  font-weight: 500;
}

.post-title:hover {
  color: #d79921;
  background-color: transparent;
}

.post-header {
  padding-bottom: 1em;
  margin-bottom: 2em;
  border-bottom: 1px solid #3c3836;
}

.note-title {
  margin-bottom: 1.5em;
  padding: 1em 0;
}

/* Main content area */
main {
  margin-bottom: 3em;
}

.back-section {
  margin-top: 2em;
  border-top: 1px dashed #3c3836;
  padding-top: 1em;
}

/* Projects */
.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5em;
  margin: 2em 0;
}

.project-card {
  border: 1px solid #3c3836;
  border-radius: 5px;
  padding: 1.5em;
  background-color: #282828;
  transition: border-color 0.2s ease;
}

.project-card:hover {
  border-color: #d79921;
}

.project-card h3 {
  margin-top: 0;
}

.project-desc {
  color: #bdae93;
  font-style: italic;
  margin-top: 0.5em;
}

.project-tout {
  border: 1px solid #3c3836;
  border-radius: 5px;
  padding: 1.5em;
  margin-bottom: 1.5em;
}

.project-type {
  display: inline-block;
  padding: 0.25em 0.75em;
  border-radius: 3px;
  background-color: #3c3836;
  font-size: 0.875em;
  margin-bottom: 0.5em;
}

/* Recipes */
.recipes-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 1.5em;
  margin: 2em 0;
}

.recipe-card {
  border: 1px solid #3c3836;
  border-radius: 5px;
  overflow: hidden;
  transition: border-color 0.2s ease;
  background-color: #282828;
}

.recipe-card:hover {
  border-color: #d79921;
}

.recipe-card a {
  border: none;
}

.recipe-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.recipe-card h3 {
  padding: 1em;
  margin: 0;
}

.recipe-content {
  display: flex;
  gap: 2em;
  margin-top: 2em;
}

.recipe-image {
  flex-shrink: 0;
  width: 300px;
}

.recipe-image img {
  width: 100%;
  border-radius: 8px;
}

.recipe-text {
  flex: 1;
}

/* Notes */
.notes-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 2em;
  margin: 2em 0;
}

.note-topic {
  border: 1px solid #3c3836;
  border-radius: 5px;
  padding: 1.5em;
  background-color: #282828;
}

.note-topic h2 {
  margin-top: 0;
  padding-left: 0;
  border-left: none;
}

.note-breadcrumb {
  color: #bdae93;
  margin-bottom: 1em;
  font-size: 0.9em;
}

.note-meta {
  color: #bdae93;
  font-size: 0.9em;
  margin-bottom: 2em;
}

.note-with-hero {
  display: flex;
  gap: 2em;
  margin-top: 2em;
}

.note-hero {
  flex-shrink: 0;
  width: 250px;
}

.note-hero img {
  width: 100%;
  border-radius: 8px;
}

.note-content {
  flex: 1;
}

/* Images */
img {
  max-width: 100%;
  height: auto;
  display: block;
  border-radius: 3px;
}

figure {
  margin: 1.5em 0;
}

figcaption {
  font-size: 0.875em;
  color: #bdae93;
  margin-top: 0.5em;
  font-style: italic;
}

span.with-border img {
  border: 1px dotted #3c3836;
}

.drawings figure {
  background-color: #3c3836;
  padding: 1em;
  border-radius: 5px;
}

/* Image Gallery */
.image-gallery {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 1em;
  margin: 2em 0;
}

.image-gallery img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.image-gallery img:hover {
  transform: scale(1.05);
}

/* Native dialog for full-size images */
dialog {
  max-width: 90vw;
  max-height: 90vh;
  border: 2px solid #3c3836;
  background-color: #1d2021;
  border-radius: 5px;
  padding: 0;
}

dialog img {
  width: 100%;
  height: auto;
}

dialog::backdrop {
  background-color: rgba(0, 0, 0, 0.8);
}

/* Tables */
table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 1.5em;
  color: #fdf4c1;
}

table th,
table td {
  border: 1px solid #3c3836;
  padding: 0.75em;
  text-align: left;
}

table th {
  background-color: #282828;
  font-weight: 600;
}

table tbody tr:hover {
  background-color: #282828;
}

/* Lists */
ul, ol {
  margin-bottom: 1em;
  margin-left: 2em;
}

li {
  margin-bottom: 0.5em;
}

/* Blockquotes */
blockquote {
  border-left: 4px solid #d79921;
  padding-left: 1em;
  margin: 1.5em 0;
  color: #bdae93;
  font-style: italic;
}

/* Horizontal Rule */
hr {
  border: none;
  border-top: 1px solid #3c3836;
  margin: 2em 0;
}

/* Footer */
footer {
  margin-top: 3em;
  padding: 1.5em 0;
  text-align: center;
  border-top: 1px solid #3c3836;
  font-size: 0.875em;
  color: #bdae93;
}

footer p {
  margin-bottom: 0;
}

/* Responsive Design */
@media (max-width: 768px) {
  body {
    font-size: 16px;
    padding: 0.5rem;
  }

  h1 { font-size: 1.75rem; }
  h2 { font-size: 1.5rem; }
  h3 { font-size: 1.25rem; }

  .nav-brand a {
    font-size: 1.25em;
  }

  .nav-links a {
    font-size: 0.9em;
    padding: 0.4em 0.8em;
  }

  .home-content {
    flex-direction: column;
  }

  .home-image {
    width: 150px;
    margin: 0 auto;
  }

  .projects-grid,
  .recipes-grid,
  .notes-grid {
    grid-template-columns: 1fr;
  }

  .recipe-content,
  .note-with-hero {
    flex-direction: column;
  }

  .recipe-image,
  .note-hero {
    width: 100%;
  }

  .image-gallery {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 0.5em;
  }

  .container {
    padding: 0 0.5rem;
  }
}

/* Print Styles */
@media print {
  body {
    background-color: white;
    color: black;
  }

  nav, footer {
    display: none;
  }

  a {
    color: black;
    text-decoration: underline;
  }
}
